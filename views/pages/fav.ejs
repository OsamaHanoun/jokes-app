</head>

<body>
    <a href="/"><button>Home</button></a>
    <a href="/random-jokes"><button>random</button></a>

    <% if(!jokesArr.length){ %>
    <p> ¯\_(ツ)_/¯</p>
    <p>You don’t have any jokes </p>

    <%} %>
    <div class="flex-container">

    <% jokesArr.forEach((val,idx)=>{ %>
    <div>
        <p><%= val.type%></p>
        <p><%= val.setup%></p>
        <p><%= val.punchline%></p>
        <a href="/joke/<%= val.id%>"><button>VIEW DETAILS</button></a>
    </div>
    <% }); %>
</div>

</body>

</html>